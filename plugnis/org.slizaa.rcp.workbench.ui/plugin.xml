      <!-- New slizaa project -->
      <extension id="org.slizaa.tool.newWizards" name="slizaa Wizards" point="org.eclipse.ui.newWizards">
            <wizard id="org.slizaa.tool.newCypherWizard" 
            		canFinishEarly="false" 
            		category="org.slizaa.ui.wizards.category" 
